extends layout

block content

	form(action="upload", method="post", enctype="multipart/form-data")

		p Select image to upload:

		input(type="file", name="powerpoint", id="powerpoint")
		input(type="submit", value="Upload", name="submit")

	script.

		function upload_file(file, signed_request, url){
			var xhr = new XMLHttpRequest();
			xhr.open("PUT", signed_request);
			xhr.setRequestHeader('x-amz-acl', 'public-read');
			xhr.onload = function() {
				console.log("success");
				window.location = "/report/" + file.name.toLowerCase().replace(".pptx","");
			};
			xhr.onerror = function() {
				alert("Could not upload file.");
			};
			xhr.send(file);
			console.log("uploading ...");
		}

		function get_signed_request(file){

			var xhr = new XMLHttpRequest();

				xhr.open("GET", "/sign_s3?file_name="+file.name+"&file_type="+file.type);
				xhr.onreadystatechange = function(){
				if (xhr.readyState === 4){
					if (xhr.status === 200){
						console.log("received");
						var response = JSON.parse(xhr.responseText);
						upload_file(file, response.signed_request, response.url);
					} else {
						alert("failed");
					}
				}
			};

			xhr.send();
			console.log("getting signed request ...");
		}

		(function() {
			document.getElementById("powerpoint").onchange = function(){
				var files = document.getElementById("powerpoint").files;
				var file = files[0];
			if (file == null){
				alert("No file selected.");
			} else {
					get_signed_request(file);
				}
			};
		})();